{
  "openapi": "3.0.0",
  "info": {
    "title": "Service Definitions and API design POWR 3",
    "version": "1.0",
    "description": ""
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/get/parts": {
      "parameters": [],
      "post": {
        "summary": "Get the parts selected for return",
        "operationId": "post-get-parts-ship_id",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dtos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "part_num": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "success": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ship_id": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": "Passes the shipment (ship_id) contaning the parts selected"
        },
        "description": ""
      }
    },
    "/save/parts": {
      "post": {
        "summary": "Save the parts selected for return",
        "operationId": "post-save-parts",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "dtos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "part_num": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Saves the parts selected (can be 1 RMA or multiple RMAs). Also passes the shipment (ship_id) created with the selected parts.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "parts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "ship_id": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": "Array of parts (part_num) and ship_id"
        }
      }
    },
    "/save/feedback": {
      "post": {
        "summary": "Saves the feedback provided by users",
        "operationId": "post-save-feedback",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "dtos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date_created": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "comments": {
                            "type": "string"
                          },
                          "rating": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Saves the feedback provided by the logged user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "comments": {
                    "type": "string"
                  },
                  "rating": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": "Passes feedback provided (cco user id or email user logged in, are stored in the server)"
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}